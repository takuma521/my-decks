<h1>Users::Books::Words#index</h1>
<p><%= "こんにちは、#{current_user.name}さん" %></p>
<% @words.each do |words| %>
  <p><%= words.name %> <%= words.translation %></p>
<% end %>
<%= form_with(url: user_book_words_path, local: true) do |form| %>
  <%= form.text_field :name %>
  <%= form.text_field :translation %>
  <%= form.submit %>
<% end %>
<%= link_to '単語帳一覧へ', user_books_path %>
<%= link_to 'logout', destroy_user_session_path, method: :delete %>
